<Window
    x:Class="NumericUpDownPoC.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NumericUpDownPoC"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="525"
    Height="250"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <local:NumericUpDown
            Grid.Row="0"
            Width="200"
            Height="50"
            DefaultValue="-50"
            Maximum="0"
            Minimum="-100"
            Precision="2"
            StepValue="1" />
        <local:NumericUpDown
            Grid.Row="1"
            Width="200"
            Height="50"
            DefaultValue="25"
            IsPercentageModeOn="True"
            Maximum="100"
            Minimum="25"
            StepValue="1" />
        <local:NumericUpDown
            Grid.Row="2"
            Width="200"
            Height="50"
            DefaultValue="6"
            IsNumericUpDownNA="True"
            Maximum="100"
            Minimum="-10"
            Precision="2"
            StepValue="1" />
    </Grid>
</Window>
