<Window
    x:Class="NumericUpDownPoC.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NumericUpDownPoC"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="525"
    Height="200"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <local:NumericUpDownGeneric
            Grid.Row="0"
            Maximum="99999"
            Minimum="-99999"
            StepValue="1"
            Value="0" />
        <local:NumericUpDownGeneric
            Grid.Row="1"
            IsNumericUpDownNA="true"
            Maximum="99999"
            Minimum="-99999"
            Precision="2"
            StepValue="1"
            Value="0" />
        <local:NumericUpDownGeneric
            Grid.Row="2"
            Maximum="10"
            Minimum="-10"
            Precision="2"
            StepValue="0.5"
            Value="0" />
    </Grid>
</Window>
